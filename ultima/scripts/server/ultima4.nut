class Ultima4World
{
  m_uiMoongateArray = null;

  m_eMoonTrammel = MoonPhase.New;
  m_eMoonFelucca = MoonPhase.New;

  static s_iTrammelInterval = 3;
  static s_fMoonPhaseInterval = 20.0;
  m_iMoonPhaseIndex = 0;

  static s_fWindInterval = 60.0;
  m_eWindDirection = Direction.North;


  constructor()
  {
    m_uiMoongateArray = array( MoonPhase.NumPhases, rumInvalidGameID );

    // Schedule Moongate phase and wind direction updates
    ::rumSchedule( this, UpdateMoonPhase, s_fMoonPhaseInterval );
    ::rumSchedule( this, UpdateWindDirection, s_fWindInterval );
  }


  function IsDarkestNight()
  {
    return ( MoonPhase.New == m_eMoonFelucca ) && ( MoonPhase.New == m_eMoonTrammel );
  }


  function UpdateMoonPhase()
  {
    // See if phase should start over
    ++m_eMoonFelucca;
    ++m_iMoonPhaseIndex;

    // See if Felucca has gone through all phases
    if( m_eMoonFelucca > MoonPhase.CrescentWaning )
    {
      m_eMoonFelucca = MoonPhase.New;
    }

    // On every third phase of Felucca, update Trammel
    if( m_iMoonPhaseIndex == s_iTrammelInterval )
    {
      ++m_eMoonTrammel;
      m_iMoonPhaseIndex = 0;

      // See if Trammel has gone through all phases
      if( m_eMoonTrammel > MoonPhase.CrescentWaning )
      {
        m_eMoonTrammel = MoonPhase.New;
      }
    }

    // Update clients
    local ciBroadcast = ::rumCreate( Moon_Phases_BroadcastID, m_eMoonTrammel, m_eMoonFelucca );
    ::rumSendGlobal( ciBroadcast );

    foreach( uiWidgetID in m_uiMoongateArray )
    {
      local ciMoongate = ::rumFetchPawn( uiWidgetID );
      if( ciMoongate != null )
      {
        ciMoongate.OnMoonPhaseChange();
      }
    }

    g_ciServer.m_ciUltima3World.UpdateMoonPhase();

    // Reschedule
    ::rumSchedule( this, UpdateMoonPhase, s_fMoonPhaseInterval );
  }


  function UpdateWindDirection()
  {
    local eDir = GetRandomDirection();
    if( m_eWindDirection != eDir )
    {
      m_eWindDirection = eDir;

      // Update clients
      local ciBroadcast = ::rumCreate( Wind_Direction_BroadcastID, m_eWindDirection );
      ::rumSendGlobal( ciBroadcast );
    }

    // Reschedule
    ::rumSchedule( this, UpdateWindDirection, s_fWindInterval );
  }


  function Update()
  {
    // Do nothing
  }
}


